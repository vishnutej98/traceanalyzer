pipeline {
    agent { 
        node {
            label 'docker-agent-python'
            }
      }
    environment {
        OUTPUT_DIRECTORY = 'D:\\Tobetested'
    }
    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Building.."
                sh'''
                python3 --version
                cd myapp
                pip install -r requirements.txt
                cd ..
                pip3 install pyinstaller
                pyinstaller --onefile main.py
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff......"
                '''
            }
        }
    }

    post {
        success {
            sh "cp dist/main.exe $OUTPUT_DIRECTORY"
        }
    }
}